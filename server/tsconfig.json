{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"outDir": "./dist/",
		"lib": ["es2017", "es6", "DOM"],
		"baseUrl": "./src/*",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/**/**/*"],
	"exclude": ["node_modules/*", "dist/*", "scripts/*"]
}
